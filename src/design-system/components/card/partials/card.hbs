<div class="card {{cardClass}}">
  {{#if cover}}
    {{!-- TODO: alt support --}}
    {{!-- TODO: lazyloading options --}}
    {{!-- TODO: width/height options --}}
    <img src="{{cover}}"  class="card__cover" alt="" loading="lazy"/>
  {{/if}}

  <div class="card__content">
    <{{#if headingTag}}{{headingTag}}{{else}}h2{{/if}} class="card__title">
      <a class="card__primary-action" href="{{link}}">
        {{title}}
      </a>
    </{{#if headingTag}}{{headingTag}}{{else}}h2{{/if}}>

    <p class="card__description">
      {{description}}
    </p>

    <div class="card__meta">
      {{> @partial-block}}
    </div>
  </div>
</div>
